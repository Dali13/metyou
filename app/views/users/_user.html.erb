<%= link_to user_path(user), class: "list-group-item" do %>
  <div class="media col-md-3">
    <figure>
      <% if !user.albums.blank? %>
      <%= image_tag(user.albums.first.avatar.thumb.url, class: "media-object img-rounded img-responsive", id: "avatar-post") %>
      <% else %>
      <img class="media-object img-rounded img-responsive"  id="avatar-post" src="http://placehold.it/350x250" alt="placehold.it/350x250">
      <% end %>
    </figure>
  </div>
  <div class="col-md-7">
    <h4 class="list-group-item-heading"><%= user.email %></h4>
    <p class="list-group-item-text">
      <small id="city-user-profile">
        <cite><%= user.gender %> - <%= user.date_of_birth %>
        <i class="glyphicon glyphicon-map-marker show-user-glyphicon"></i>
        </cite>
      </small>
      <%=h truncate(user.description, length: 40) %>
    </p>
  </div>
  <div class="col-md-2">
    
    <p><%= user.created_at %></p>

  </div>
  <div class="clearfix"></div>
<% end %>