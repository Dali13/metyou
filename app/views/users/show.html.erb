<% if @album.blank? %>
  <%= render 'user_partial/show_0' %>
<% else %>
  <%= render 'user_partial/show_1' %>
<% end %>

<div>
<% if current_user.admin? %>
    <%= button_to("Delete This User", user_path(@user), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }) %>
<% end %>
</div>